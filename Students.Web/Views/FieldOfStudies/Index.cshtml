@using Students.Interfaces
@using System.Globalization
@model IEnumerable<Students.Common.Models.FieldOfStudy>

@{
    CultureInfo cultureInfo = CultureInfo.GetCultureInfo(Context.Session.GetString("Culture") ?? "en-US");
    ViewData["Title"] = "Index";
}
@inject ISharedResourcesService sharedResourcesService

<h1> @sharedResourcesService.GetString("IndexOfField", cultureInfo) </h1>

<p>
    <a asp-action="Create"> @sharedResourcesService.GetString("Create", cultureInfo) </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @sharedResourcesService.GetString("Name", cultureInfo)
            </th>
            <th>
                @sharedResourcesService.GetString("DurationOfStudies", cultureInfo)
            </th>
            <th>
                @sharedResourcesService.GetString("NumberOfStudents", cultureInfo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DurationOfStudies)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfStudents)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"> @sharedResourcesService.GetString("Modification", cultureInfo) </a> |
                    <a asp-action="Details" asp-route-id="@item.Id"> @sharedResourcesService.GetString("Details", cultureInfo) </a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"> @sharedResourcesService.GetString("Removal", cultureInfo) </a>
                </td>
            </tr>
        }
    </tbody>
</table>
