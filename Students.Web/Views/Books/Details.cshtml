@using Students.Interfaces
@using System.Globalization
@model Students.Common.Models.Book

@{
    CultureInfo cultureInfo = CultureInfo.GetCultureInfo(Context.Session.GetString("Culture") ?? "en-US");
    ViewData["Title"] = "Details";
}
@inject ISharedResourcesService sharedResourcesService

<h1> @sharedResourcesService.GetString("Details", cultureInfo) </h1>

<div>
    <h4> @sharedResourcesService.GetString("Book", cultureInfo) </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @sharedResourcesService.GetString("BookTitle", cultureInfo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookTitle)
        </dd>
        <dt class="col-sm-2">
            @sharedResourcesService.GetString("ISBN", cultureInfo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ISBN)
        </dd>
        <dt class="col-sm-2">
            @sharedResourcesService.GetString("PublicationDate", cultureInfo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublicationDate)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id"> @sharedResourcesService.GetString("Edit", cultureInfo) </a> |
    <a asp-action="Index">@sharedResourcesService.GetString("BackToList", cultureInfo)</a>
</div>
