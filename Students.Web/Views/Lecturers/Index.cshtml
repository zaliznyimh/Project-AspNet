@using Students.Interfaces
@using System.Globalization
@model IEnumerable<Lecturer>

@inject ISharedResourcesService sharedResourcesService

@{
    CultureInfo cultureInfo = CultureInfo.GetCultureInfo(Context.Session.GetString("Culture") ?? "en-US");
    ViewData["Title"] = "Index";
}

<h1> @sharedResourcesService.GetString("IndexOfLectures", cultureInfo) </h1>

<p>
    <a asp-action="Create"> @sharedResourcesService.GetString("Create", cultureInfo) </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @sharedResourcesService.GetString("LectureName", cultureInfo)
            </th>
            <th>
                @sharedResourcesService.GetString("AcademicDegree", cultureInfo)
            </th>
            <th>
                @sharedResourcesService.GetString("Promoter")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcademicDegree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPromoter)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"> @sharedResourcesService.GetString("Edit", cultureInfo) </a> |
                    <a asp-action="Details" asp-route-id="@item.Id">@sharedResourcesService.GetString("Details", cultureInfo)</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">@sharedResourcesService.GetString("Delete", cultureInfo)</a>
            </td>
        </tr>
}
    </tbody>
</table>
