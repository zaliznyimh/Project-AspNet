@using Students.Interfaces
@using System.Globalization
@model Students.Common.Models.Lecturer

@inject ISharedResourcesService sharedResourcesService

@{
    CultureInfo cultureInfo = CultureInfo.GetCultureInfo(Context.Session.GetString("Culture") ?? "en-US");
    ViewData["Title"] = "Delete";
}

<h1> @sharedResourcesService.GetString("Removal", cultureInfo) </h1>

<h3> @sharedResourcesService.GetString("RemovalConfirm", cultureInfo) </h3>
<div>
    <h4>Lecturer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @sharedResourcesService.GetString("StudentName", cultureInfo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @sharedResourcesService.GetString("AcademicDegree", cultureInfo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AcademicDegree)
        </dd>
        <dt class="col-sm-2">
            @sharedResourcesService.GetString("Promoter", cultureInfo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsPromoter)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="@sharedResourcesService.GetString("Delete", cultureInfo)" class="btn btn-danger" /> |
        <a asp-action="Index"> @sharedResourcesService.GetString("BackToList", cultureInfo) </a>
    </form>
</div>
